<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:background="@drawable/custom_slipper_item_recycleview"
    android:orientation="vertical"
    android:paddingStart="@dimen/_3sdp"
    android:paddingEnd="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_125sdp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp">

        <ImageView
            android:id="@+id/imv_patient_sche"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_app" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_9sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:weightSum="6.2">

            <TextView
                android:id="@+id/tv_name_patient_sche"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_3sdp"
                android:layout_weight="1.2"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="Anh Dinh Van Quang"
                android:textColor="@color/colorTextParent"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_location" />

                <TextView
                    android:id="@+id/tv_address_patient_sche"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="Hoang Mai - Ha Noi"
                    android:textColor="@color/colorTextChild"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_phone" />

                <TextView
                    android:id="@+id/tv_phone_patient_sche"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="0123123123"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_birthyear_patient_sche"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:text="Sinh nam: 1984"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_calendar" />

                <TextView
                    android:id="@+id/tv_date_appoint_sche"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="Ngày hẹn khám: 25/05/2021"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_calendar" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="Mô tả bệnh tình"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/edt_custom_xam"
            android:text="Hủy bỏ"
            android:textColor="@color/black"
            android:textSize="@dimen/_8sdp" />

        <Button
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/edt_custom_do"
            android:text="Tư vấn"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edt_custom_xanhdatroi"
            android:text="Hoàn thành"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGachChan" />
</RelativeLayout>