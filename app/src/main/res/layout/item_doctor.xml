<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_1sdp"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_3sdp">

        <TextView
            android:id="@+id/tvSoNguoiChoDoctorItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/edt_custom_xam"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Số người chờ: 0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imvImageDoctorItem"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_health" />

        <TextView
            android:id="@+id/tvFrequencyDoctorItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@drawable/edt_custom_xanhdatroi"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Thường xuyên"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_3sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStatusDoctorItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:background="@drawable/edt_custom_xanhlacay"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Đang nhận tư vấn"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvNameDoctorItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/roboto_bold"
            android:maxLines="2"
            android:text="PGS.TS. Vu Thi Bich Hanh (tu van sau 20h toi)"
            android:textColor="@color/colorTextChild"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Phí tư vấn: "
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvPriceDoctorItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:text="150.000d"
                android:textColor="@color/colorVinIDPress"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Đơn vị: "
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvDonViDoctorItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="BV Đại học Y Hà Nội"
                android:textColor="@color/colorVinIDPress"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center_vertical"
                android:text="Đánh giá: "
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvStartDoctorItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="4"
                android:textColor="@color/colorVinIDPress"
                android:textSize="@dimen/_11ssp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_star" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/colorGachChan" />

    </LinearLayout>


</LinearLayout>