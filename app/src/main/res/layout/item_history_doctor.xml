<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:background="@drawable/custom_slipper_item_recycleview"
    android:paddingStart="@dimen/_3sdp"
    android:paddingEnd="@dimen/_3sdp">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_bg_status"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:text="Done"
        android:textColor="@color/white"
        android:textSize="@dimen/_8ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp">

        <ImageView
            android:id="@+id/imv_patient"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@mipmap/ic_health" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_9sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:weightSum="7.2">

            <TextView
                android:id="@+id/tv_name_patient"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="Anh Dinh Van Quang"
                android:textColor="@color/colorTextParent"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_location" />

                <TextView
                    android:id="@+id/tv_address_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="Hoang Mai - Ha Noi"
                    android:textColor="@color/colorTextChild"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_phone" />

                <TextView
                    android:id="@+id/tv_phone_patient"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="0123123123"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_calendar" />

                <TextView
                    android:id="@+id/tv_date_appoint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_3sdp"
                    android:text="Ngày khám: 25/05/2021"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:text="Thanh toán: 200.000đ"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tv_result_patient"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:text="Kết luận: Viêm da cơ địa"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tv_mota_patient"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:text="Kết luận: Viêm da cơ địa"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorGachChan" />
</RelativeLayout>